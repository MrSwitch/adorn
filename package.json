{
  "name": "adorn-kit",
  "version": "1.3.3",
  "description": "Markup beautifier drop in script",
  "type": "module",
  "main": "adorn.js",
  "scripts": {
    "build": "node ./build.js",
    "server": "bundle exec jekyll serve",
    "lint": "eslint ./",
    "lint-fix": "eslint --fix ./",
    "test": "npm run lint && npm run build",
    "lint-diff": "LIST=`git diff-index --name-only HEAD | grep '.*\\.js$';`; if [ \"$LIST\" ]; then eslint $LIST; fi",
    "precommit-msg": "echo 'Running pre-commit checks... (skip using --no-verify)' && exit 0"
  },
  "pre-commit": [
    "precommit-msg",
    "lint-diff"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/MrSwitch/adorn.git"
  },
  "author": "Andrew Dodson",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MrSwitch/adorn/issues"
  },
  "homepage": "https://github.com/MrSwitch/adorn",
  "devDependencies": {
    "esbuild": "^0.24.0",
    "esbuild-plugin-inline-import": "^1.1.0",
    "esbuild-plugin-less": "^1.3.10",
    "eslint": "^8.57.1",
    "eslint-config-mr": "^1.2.2",
    "less": "^4.2.0",
    "pre-commit": "^1.2.2"
  },
  "dependencies": {
    "tricks": "^2.0.1"
  }
}
